<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import mainwindow.SearchBox ?>
<?import mainwindow.SavedBox ?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<fx:root type="javafx.scene.layout.GridPane" fx:id="mainWindow" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
	<padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
	<columnConstraints>
		<ColumnConstraints percentWidth="50.0"/>
		<ColumnConstraints percentWidth="50.0"/>
	</columnConstraints>
	<rowConstraints>
		<RowConstraints percentHeight="90.0"/>
		<RowConstraints percentHeight="10.0"/>
	</rowConstraints>
	<SearchBox fx:id="searchBox" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
	<SavedBox fx:id="savedBox" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2"/>
	<Button text="Configure" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#handleConfigureButtonAction"/>
</fx:root>


